<!DOCTYPE html>
<html lang="en">
    <%- include('head', {title: "All foods"}); -%>
    <body>
        <%- include('header'); -%>
        <div class="Subhead m-5">
            <div class="Subhead-heading">All Food items in our database</div>
            <div class="Subhead-description">Select items to calculate calories</div>
        </div>
        <div class="markdown-body py-1 px-5">
            <table>
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>Typical Values Per</th>
                      <th>Calories</th>
                      <th>Carbs</th>
                      <th>Fats</th>
                      <th>Proteins</th>
                      <th>Salt</th>
                      <th>Sugar</th>
                    </tr>
                </thead>
                <tbody>
                    <% foods.forEach(function(food){ %>
                    <tr>
                      <td><%= food.name %></td>
                      <td><%= food.typical_values_per %> <%= food.unit_of_tvp %></td>
                      <td><%= food.calories %></td>
                      <td><%= food.carbs %></td>
                      <td><%= food.fats %></td>
                      <td><%= food.proteins %></td>
                      <td><%= food.salt %></td>
                      <td><%= food.sugar %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </body>
</html>